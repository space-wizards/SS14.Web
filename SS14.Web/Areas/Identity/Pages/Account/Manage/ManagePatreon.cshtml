@page
@model ManagePatreon

@{
    ViewData["Title"] = "Patreon";
    ViewData["ActivePage"] = ManageNavPages.ManagePatreon;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-9">
        @if (Model.PatreonLinked)
        {
            <p>
                Your Patreon account is linked to your Space Station 14 account.<br/>
                @if (Model.PatreonTier == null)
                {
                    <span>However, you currently have <strong>no active membership tier.</strong></span>
                }
                else
                {
                    <span>
                        Your current membership tier is <strong>@Model.PatreonTier</strong>.
                    </span>
                }
            </p>

            <form id="unlink-form" method="post">
                <button id="unlink-patreon" type="submit" asp-page-handler="UnlinkPatreon" class="btn btn-danger">Unlink Patreon account</button>
            </form>        }
        else
        {
            <p>
                If you are one of our <a href="https://patreon.com/spacestation14">patrons</a>,
                you can link your Patreon account with your Space Station 14 account here to receive recognition on servers.
            </p>
            <form id="link-form" method="post">
                <button id="link-patreon" type="submit" asp-page-handler="LinkPatreon" class="btn btn-primary">Link Patreon account</button>
            </form>        }

    </div>
</div>